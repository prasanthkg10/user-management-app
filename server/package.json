{
  "name": "user-management-backend",
  "version": "1.0.0",
  "description": "A backend service for managing users.",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "test": "jest",
    "build": "tsc"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chai": "^5.2.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^7.2.1",
    "joi": "^17.13.3",
    "mongoose": "^5.13.23",
    "sinon": "^21.0.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.8",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.0.0",
    "@types/mongoose": "^5.10.2",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "jest": "^29.0.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "license": "MIT"
}
